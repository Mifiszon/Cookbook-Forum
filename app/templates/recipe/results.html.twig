{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.recipe_search_results'|trans }}
{% endblock %}

{% block body %}
    <div class="container">
        <h2>{{ 'title.recipe_search_results'|trans }}</h2>

        {% if recipes is not empty %}
            <ul class="list-group">
                {% for recipe in recipes %}
                    <li class="list-group-item d-flex justify-content-between align-items-center">
                        {{ recipe.title }}
                        <a class="btn btn-outline-primary" href="{{ path('recipe_show', {id: recipe.id}) }}" title="{{ 'action.show'|trans }}">
                            {{ 'action.show'|trans }}
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>{{ 'message.no_results_found'|trans }}</p>
        {% endif %}

        <div class="mt-3">
            <a href="{{ path('recipe_index') }}" title="{{ 'action.back_to_list'|trans }}" class="btn btn-primary">
                {{ 'action.back_to_list'|trans }}
            </a>
        </div>
    </div>
{% endblock %}
